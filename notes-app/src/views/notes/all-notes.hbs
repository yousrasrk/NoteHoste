{{#if messages}}


  
  
 <script>  M.toast({html: 'Note Added Successfully'}) </script>
   


{{/if}}

<div class="row" style="margin-top:100px;">
    {{#each notes}}


    <div class="col s12 m4">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><strong> {{ title }}</strong>
<a href="/notes/edit/{{_id}}"><i class="material-icons" style="color:#ffab40 ;margin-left:10px;" >edit
</i></a></span>

          <p >{{ description }}</p>


        </div>

        <div class="card-action">
          <form action="/notes/delete/{{_id}}" method="GET">
          
          <button type="submit" class="btn btn-danger btn-block btn-sm" style="background-color: #efebe9 ;color:#ff8a80;"><strong>DELETE</strong></button>
        </form>
          <!--<a href="/notes/delete/{{_id}}">delete</a>
          <a href="#">This is a link</a>-->
        </div>
      </div>
    </div>
  {{else}}
  
      {{#each searchUser}}
     {{#if name}}
           
 
  <div class="container" style="margin-top:200px;">


<div class="row">
    
    <div class="card horizontal">
     
      <div class="card-stacked">
        <div class="card-content">
          <h3>Hello {{name}} </h3>
         <p>There are no Notes yet.</p>
        <div class="card-action">
          <a style="color:#fff;" href="/notes/add" class="btn btn-success btn-block">Create One!</a>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
  {{/if}}
