
<div class="container" style="margin-top:100px;">
    
    <div class="col-mdm4 mx-auto">
      <div class="card-panel" class="z-depth-5">
        <div >
          <div style="color:#00897b; text-align:center; font-size:20px">     <strong>Contact us</strong> </div>



<div class="container" >

<div class="row">
    
      <form action="/email" method="POST">
   <div class="row">
    

          <div class="input-field col s6">

          <i class="material-icons prefix">account_circle</i>
          <input id="icon_prefix" name="name" type="text" class="validate">
          <label for="icon_prefix">First Name</label>
        </div>

        <div class="input-field col s6">
          <i class="material-icons prefix">phone</i>
          <input id="icon_telephone" name="tele" type="tel" class="validate">
          <label for="icon_telephone">Telephone</label>
        </div>

         <div class="input-field col s12">
          <input id="email" type="email" class="validate">
          <label for="email">Email</label>
          <span class="helper-text" name="email" data-error="wrong" data-success="right">Helper text</span>
        </div>

       <div class="input-field col s12">
          <textarea id="textarea1" name="message"class="materialize-textarea"></textarea>
          <label for="textarea1">Message</label>
        </div>

       <div class="card-action">
           <button class="btn waves-effect waves-light" type="submit" name="action">Send
           <i class="material-icons right">send</i>
             </button>
          
        </div>
    </form>
  </div>
 </div>