{{#if errors}}


  
  
 <script>  M.toast({html: 'incorrect email or password'}) </script>
   


{{/if}}
<div class="container" style="margin-top:100px;">
    
    <div class="col-mdm4 mx-auto">
      <div class="card-panel" class="z-depth-5">
        <div >
          <div style="color:#00897b; text-align:center; font-size:20px">     <strong>Account Login</strong> </div>



<div class="container" >

<div class="row">
    
    <form class="col s12" action="/users/signin" method="POST">
      <div class="row">
         <div class="row">
        <div class="input-field col s12">
          <input id="email" type="email" class="validate" name="email" placeholder="Email">
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate" name="password" placeholder="Password">
          <label for="password">Password</label>
        </div>
      </div>
     
       <div class="card-action">
         <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
          
        </div>
    </form>
  </div>
 </div>